<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="192.0" prefWidth="523.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.popups.SettingsPopupController">
   <left>
      <ImageView fitHeight="93.0" fitWidth="102.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <image>
            <Image url="@Settings.png" />
         </image>
      </ImageView>
   </left>
   <bottom>
      <ButtonBar buttonMinWidth="80.0" BorderPane.alignment="CENTER">
         <buttons>
            <Button fx:id="closeButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#closeWindow" text="Close" textAlignment="CENTER" translateX="-195.0" />
         </buttons>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </ButtonBar>
   </bottom>
   <padding>
      <Insets bottom="10.0" left="25.0" right="25.0" top="10.0" />
   </padding>
   <right>
      <Group BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="zoomIn" mnemonicParsing="false" onAction="#zoomIn" prefHeight="39.0" prefWidth="154.0" text="Zoom In">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button fx:id="zoomOut" layoutY="54.0" mnemonicParsing="false" onAction="#zoomOut" prefHeight="39.0" prefWidth="154.0" text="Zoom Out">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
      </Group>
   </right>
   <center>
      <Button fx:id="invertColours" mnemonicParsing="false" onAction="#invertColours" prefHeight="39.0" prefWidth="154.0" text="Invert Colours" BorderPane.alignment="CENTER">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
   </center>
</BorderPane>
