<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<BorderPane prefHeight="192.0" prefWidth="523.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.popups.ProfilePopupController">
   <left>
      <ImageView fitHeight="105.0" fitWidth="111.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <image>
            <Image url="@Profile.png" />
         </image>
      </ImageView>
   </left>
   <bottom>
      <ButtonBar buttonMinWidth="80.0" BorderPane.alignment="CENTER">
         <buttons>
            <Button fx:id="closeButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#closeWindow" text="Close" textAlignment="CENTER" translateX="-195.0" />
         </buttons>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </ButtonBar>
   </bottom>
   <right>
      <Button fx:id="logoutButton" mnemonicParsing="false" prefHeight="51.0" prefWidth="154.0" text="Logout" BorderPane.alignment="CENTER" onAction="#logout">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
   </right>
   <center>
      <Group BorderPane.alignment="CENTER">
         <children>
            <Text fx:id="usernameText" strokeType="OUTSIDE" strokeWidth="0.0" text="Username:">
               <font>
                  <Font size="18.0" />
               </font>
            </Text>
            <Text fx:id="userIDText" layoutY="45.0" strokeType="OUTSIDE" strokeWidth="0.0" text="User ID:">
               <font>
                  <Font size="18.0" />
               </font>
            </Text>
         </children>
      </Group>
   </center>
   <padding>
      <Insets bottom="10.0" left="25.0" right="25.0" top="10.0" />
   </padding>
</BorderPane>
